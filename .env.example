# HoneyTrap Configuration
# Copy this file to .env and customize values

# Environment
HONEYTRAP_ENV=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://honeytrap:honeytrap@localhost:5432/honeytrap
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=change-this-to-a-secure-random-string
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# SSH Honeypot
SSH_ENABLED=true
SSH_HOST=0.0.0.0
SSH_PORT=2222
SSH_BANNER=SSH-2.0-OpenSSH_8.9p1 Ubuntu-3ubuntu0.4

# HTTP Honeypot
HTTP_ENABLED=true
HTTP_HOST=0.0.0.0
HTTP_PORT=8080
HTTPS_PORT=8443

# FTP Honeypot
FTP_ENABLED=true
FTP_HOST=0.0.0.0
FTP_PORT=2121

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=data/logs/honeytrap.log

# GeoIP (MaxMind)
GEOIP_DATABASE_PATH=data/GeoLite2-City.mmdb

# Threat Intelligence APIs (optional)
ABUSEIPDB_API_KEY=
VIRUSTOTAL_API_KEY=

# ML Configuration
ML_MODEL_PATH=ml/models/
ML_RETRAIN_INTERVAL_HOURS=24
