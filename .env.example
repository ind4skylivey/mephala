# ============================================================================
# HONEYTRAP ENVIRONMENT CONFIGURATION
# Copy this file to .env and configure with your values
# NEVER commit .env to version control!
# ============================================================================

# Environment (development, staging, production)
HONEYTRAP_ENV=development
DEBUG=false

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql+asyncpg://honeytrap:CHANGE_THIS_PASSWORD@localhost:5432/honeytrap
# For SQLite (development only):
# DATABASE_URL=sqlite+aiosqlite:///./data/honeytrap.db

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# API SECURITY
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
API_ACCESS_TOKEN_EXPIRE_MINUTES=30
API_ALGORITHM=HS256

# ============================================================================
# HONEYPOT SERVICES
# ============================================================================
SSH_ENABLED=true
SSH_PORT=2222
SSH_HOST_KEY_PATH=data/ssh_keys/ssh_host_rsa_key

HTTP_ENABLED=true
HTTP_PORT=8080
HTTPS_PORT=8443

FTP_ENABLED=true
FTP_PORT=2121

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=data/logs/honeytrap.log

# ============================================================================
# GEOIP (Optional - for attack geolocation)
# ============================================================================
# Download from: https://dev.maxmind.com/geoip/geolite2-free-geolocation-data
# GEOIP_DATABASE_PATH=data/GeoLite2-City.mmdb

# ============================================================================
# ML CONFIGURATION
# ============================================================================
ML_MODEL_PATH=ml/models
ML_AUTO_CLASSIFY=true
ML_CONFIDENCE_THRESHOLD=0.7

# ============================================================================
# ALERTING (Optional)
# ============================================================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ
# ALERT_EMAIL=security@example.com
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
